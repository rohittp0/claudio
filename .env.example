# Anthropic API Key (for Claude Agent SDK)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google AI API Key (for Veo 3 and Nano Banana via Gemini API)
GOOGLE_API_KEY=your_google_api_key_here

# Optional: Google Cloud Project (if using Vertex AI instead of Gemini API)
# GOOGLE_CLOUD_PROJECT=your_project_id
# GOOGLE_CLOUD_LOCATION=us-central1

# Workspace Configuration
WORKSPACE_DIR=~/.claudio
LOG_LEVEL=INFO

# Cost Estimation (USD)
NANO_BANANA_COST_PER_IMAGE=0.10
VEO_COST_PER_SECOND=0.40

# Video Generation Defaults
DEFAULT_VIDEO_QUALITY=1080p
MAX_SCENE_DURATION=8
